data "aws_iam_policy_document" "datadog_aws_integration_assume_role" {

  statement {
    actions = ["sts:AssumeRole"]

    principals {
      type        = "AWS"
      identifiers = ["arn:aws:iam::464622532012:root"] #464622532012 :Datadogâ€™s account ID which grants Datadog access to your AWS data.
    }
    condition {
      test     = "StringEquals"
      variable = "sts:ExternalId"

      values = [
        datadog_integration_aws_account.main.auth_config.aws_auth_config_role.external_id
      ]
    }
  }
}

